   #include <stdio.h>
   
   

int conjetura(){
	int iteraciones=0;
   	int numero;
   	printf("Numero inicial: ");
   	scanf("%d", &numero);
   	 while (numero != 1)
	{
		if (numero % 2 == 0)
		{
			numero = numero / 2;
		}
		else
		{
			numero = (3 * numero) + 1;
		}
		// Si no quieres imprimir, simplemente elimina o comenta la siguiente l√≠nea
		printf("%llu,", numero);
		iteraciones++;
	}
	printf("\n\nNumero de iteraciones %d ", iteraciones);
	
	
}
   int main(){
   	
   	
   	printf("Conjetura de collatz: \n\n");
   	
	conjetura();
	
    return 0;
	
	
   }
